.flex-column.note.em-300.width-80.alt-font.f-16
  .flex-row.flex-end.flex-start-tablet
    .flex-row.width-100(ng-hide="state.editNote")
      .tx-note.em-300.text-cursor(ng-show="state.note" ng-bind-html="state.note | escapeHtml | highlight:search")
      a.mlm(ng-show="state.note" ng-click="startEditNote()")
        i.ti-pencil
      span.mid-grey.pointer.em-300.f-14(ng-click="startEditNote()" ng-hide="state.editNote || state.note" translate="ADD_A_DESCRIPTION") 
    a.cancel(ng-click="cancelEditNote()" ng-show="state.editNote")
      i.ti-close
  .flex-column.input(ng-show="state.editNote" ng-class="{'pos-abs': transaction.toggled}")
    textarea.em-300(on-enter="saveNote()" ng-model="state.draftNote" maxlength="255" placeholder="{{'ADD_A_DESCRIPTION' | translate}}")
    .flex-start.mts
      span.label.label-success.pointer(ng-click="saveNote()", translate="SAVE", ng-hide="state.note")
      span.label.label-success.pointer(ng-click="saveNote()", translate="UPDATE_NOTE", ng-show="state.note")
      span.label.label-danger.pointer.mls(ng-click="deleteNote()" ng-show="state.note")
        i.ti-trash.type-h4
