div.ethAmountTotal.em-400.amount.flex-center.flex-justify(
  ng-class="{\
    'button-transferred': $ctrl.tx.txType === 'transfer',\
    'button-received'    : $ctrl.tx.txType === 'received',\
    'button-sent'       : $ctrl.tx.txType === 'sent',\
    'unconfirmed' : $ctrl.tx.confirmations < $ctrl.confirmationsNeeded \
  }" ng-click="$ctrl.toggleTransactionDisplayCurrency()")
  fiat(eth="$ctrl.tx.amount" ng-show="$ctrl.settings.displayTransactionCurrencyAsFiat" abs)
  span.ethTransactionAmount(ng-hide="$ctrl.settings.displayTransactionCurrencyAsFiat") {{ $ctrl.absolute($ctrl.tx.amount) }}
  | &nbsp;
  span(ng-hide="$ctrl.settings.displayTransactionCurrencyAsFiat") ETH
