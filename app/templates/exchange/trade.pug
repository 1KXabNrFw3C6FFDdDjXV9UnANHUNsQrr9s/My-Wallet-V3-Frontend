.exchange-trade.border-right.border-bottom.border-left
  .exchange-status.pv-15
    span.pl-25.ph-10-mobile.state-danger-text(ng-show="$ctrl.trade.isFailed") {{ $ctrl.trade.status | translate }}
    span.pl-25.ph-10-mobile.state.success(ng-show="$ctrl.trade.isComplete" translate="COMPLETE")
    span.pl-25.ph-10-mobile.state.medium-blue(ng-show="$ctrl.trade.isWaitingForDeposit || $ctrl.trade.isProcessing" translate="IN_PROGRESS")
    span.pl-25.ph-10-mobile.state-danger-text(ng-show="$ctrl.trade.isResolved" translate="REFUNDED")
    a.hidden-xs(ng-click="$ctrl.viewDetails($ctrl.trade)" translate="VIEW_DETAILS")
  .exchange-date.pv-15
    span {{ $ctrl.trade.time | date:$ctrl.dateFormat }}
  .exchange-exchanged.pv-15
    span.upper {{ $ctrl.trade.depositAmount }} {{ $ctrl.trade.fromCurrency }}
  .exchange-received.pv-15
    span.upper(ng-class="{'mid-grey opacity-5': $ctrl.trade.isWaitingForDeposit || $ctrl.trade.isProcessing || $ctrl.trade.isResolved}") {{ $ctrl.trade.withdrawalAmount }} {{ $ctrl.trade.toCurrency }}
