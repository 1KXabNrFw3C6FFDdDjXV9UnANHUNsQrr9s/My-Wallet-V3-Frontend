.modal-header.flex-column.bc-modal-header.tabbed(data-preflight-tag="Send")
  i.ti-close.close-modal(ng-click="$close()")
  .tabs.f-20.pos-rel
    span.pointer.pv-10.ph-15.border.display-inline-block(ng-class="{'border-bottom-white': vm.onTab('btc')}" ng-click="vm.showTab('btc')")
      i.pr-10.icon-bitcoin
      span Send BTC
    span.pointer.pv-10.ph-15.border.display-inline-block(ng-class="{'border-bottom-white': vm.onTab('eth')}" ng-click="vm.showTab('eth')")
      i.pr-10.icon-bitcoin
      span Send ETH
div(ng-if="vm.onTab('btc')" ng-include="'partials/send/send-bitcoin.pug'")
div(ng-if="vm.onTab('eth')" ng-include="'partials/send/send-ethereum.pug'")
